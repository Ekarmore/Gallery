---
import { Image } from '@astrojs/image/components'
---
   <div
      class="left-0 top-0 z-40 w-full h-full fixed flex items-center justify-center"
    >
      <div class="flex flex-col max-w-11/12 gap-2 relative">
        <Image
          class="modalImg z-30 max-h-2xl w-auto"
          width={600}
          aspectRatio={'origin'}
          src={' '}
          alt="Image"
        />
      </div>
      <div class="flex items-center absolute justify-end z-30 bottom-10 select-none italic font-sans gap-2">
        <span class="returnTo cursor-pointer md:hover:opacity-50 p-1">return</span>
        <span>/</span>
        <span class="prev cursor-pointer md:hover:opacity-50 p-1">prev</span>
        <span>/</span>
        <span class="curImage cursor-pointer md:hover:opacity-50 p-1"></span>
        <span>/</span>
        <span class="next cursor-pointer md:hover:opacity-50 p-1">next</span>
      </div>
      <div
        class="modal w-full h-full dark:bg-black/80 bg-white/80 absolute z-10 backdrop-blur-lg"
      >
      </div>
    </div>
